EOS WATER
  # only heat conduction, no temperature-dependent hydro properties
  DENSITY CONSTANT 9.9716D+2 kg/m^3
  ENTHALPY CONSTANT 1.8890D+0 J/kmol
  VISCOSITY CONSTANT 8.904156D-4 Pa-s
END

FLUID_PROPERTY
  DIFFUSION_COEFFICIENT 1.0D-50
END

MATERIAL_PROPERTY salt
  ID 1
  CHARACTERISTIC_CURVES cc1
  POROSITY 1.0D-8 # all solid phase
  TORTUOSITY 1.0D+0
  ROCK_DENSITY 2.160D+3 kg/m^3
  THERMAL_CHARACTERISTIC_CURVES cct_salt_constant
  HEAT_CAPACITY 8.27546D+2 J/kg-C
  PERMEABILITY
    PERM_ISO 1.0D-12
  END
END

THERMAL_CHARACTERISTIC_CURVES cct_salt_constant
  THERMAL_CONDUCTIVITY_FUNCTION CONSTANT
    CONSTANT_THERMAL_CONDUCTIVITY 5.33D+0 W/m-C
  END
END

CHARACTERISTIC_CURVES cc1
  SATURATION_FUNCTION VAN_GENUCHTEN
    LIQUID_RESIDUAL_SATURATION 0.2d0
    ALPHA 1.d-4
    M 0.5d0
    MAX_CAPILLARY_PRESSURE 1.d6
  END
  PERMEABILITY_FUNCTION MUALEM
    PHASE LIQUID
    LIQUID_RESIDUAL_SATURATION 0.2d0
    M 0.5d0
  END
  PERMEABILITY_FUNCTION MUALEM_VG_GAS
    PHASE GAS
    LIQUID_RESIDUAL_SATURATION 0.2d0
    GAS_RESIDUAL_SATURATION 0.1d0
    M 0.5d0
  END
END

REGRESSION
  CELL_IDS      
      2
      22
      44
      66
      98
  END
END

TIME
  FINAL_TIME 86400.0 sec
END

REGION all
  COORDINATES
    0.0    0.0 0.0
    1.d20  1.0 1.0
  END
END

REGION borehole_inactive_REG
  BLOCK 1 1  1 1  1 1
END

REGION borehole_wall_REG
  FACE WEST
  BLOCK 2 2  1 1  1 1
END

FLOW_CONDITION initial_uniform
  TYPE
    LIQUID_PRESSURE DIRICHLET
    MOLE_FRACTION DIRICHLET
    TEMPERATURE DIRICHLET
  END
  LIQUID_PRESSURE 1.01325D+6 Pa
  MOLE_FRACTION 1.0D-10
  TEMPERATURE 3.0D+1 C  
END

FLOW_CONDITION borehole_wall_FC
  TYPE
    LIQUID_PRESSURE DIRICHLET
    MOLE_FRACTION DIRICHLET
    TEMPERATURE DIRICHLET
  END
  LIQUID_PRESSURE 1.01325D+6 Pa
  MOLE_FRACTION 1.0D-10
  TEMPERATURE 6.0D+1 C
END

INITIAL_CONDITION uniform_ic
  FLOW_CONDITION initial_uniform
  REGION all
END
BOUNDARY_CONDITION borehole_wall_bc
  FLOW_CONDITION borehole_wall_FC
  REGION borehole_wall_REG
END

STRATA
  MATERIAL salt
  REGION all
END

STRATA
  INACTIVE
  REGION borehole_inactive_REG
END

